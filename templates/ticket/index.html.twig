{% extends 'base.html.twig' %}

{% block title %}Hello TicketController!{% endblock %}

{% block body %}
    <div class="example-wrapper">
        {% if tickets|length > 0 %}
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>
                                Etat
                            </th>
                            <th>
                                Priorit√©
                            </th>
                            <th>
                                Auteur
                            </th>
                            <th>
                                Description
                            </th>
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <th>
                                Actions
                            </th>
                            {% endif %}
                        </tr>
                        </thead>
                        <tbody>
                        {% for ticket in tickets %}
                            {% include './components/ticket.twig' with {'ticket': ticket} %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {% else %}
            <p>pas de tickets</p>
        {% endif %}
    </div>
{% endblock %}
